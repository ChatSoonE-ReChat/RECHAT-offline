<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Re_Chat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Status bar, text color. -->
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- make status bar translucent(semitransparent) -->
        <item name="android:windowTranslucentStatus">false</item>

        <!-- draw status bar on background -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>

        <!-- full screen mode -->
        <item name="android:windowFullscreen">false</item>

        <!-- font -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <!-- EditText -->
    <style name="EditTheme" parent="Theme.Re_Chat">
        <!-- 커서 색, 드래그 시 하이라이트 색, EditText 선택 시 밑줄 하이라이트 색 등 강조 색 변경 -->
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <!-- MyFolder option PopupMenu -->
    <style name="MyFolderOptionPopupMenuTheme" parent="Theme.Re_Chat">
        <item name="android:popupBackground">@drawable/bg_popup_menu_folder_option</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide_out</item>
    </style>

</resources>