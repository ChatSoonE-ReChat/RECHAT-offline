<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_hidden_folder"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/item_hidden_folder_iv"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_hidden_folder_cloud"
        app:layout_constraintBottom_toTopOf="@+id/item_hidden_folder_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/item_hidden_folder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cafessurroundair"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="@string/my_folder_name"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/item_hidden_folder_iv"
        app:layout_constraintStart_toStartOf="@+id/item_hidden_folder_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_hidden_folder_iv"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>